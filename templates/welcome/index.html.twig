{% extends 'base.html.twig' %}

{% block title %}Welcome to TDD Symfony{% endblock %}

{% block body %}
    <body class="bg-gray-100 min-h-screen flex items-center justify-center">
        <div class="max-w-2xl mx-auto p-8 bg-white rounded-lg shadow-xl">
            <div class="text-center">
                <!-- Logo o icono opcional -->
                <div class="mx-auto h-16 w-16 bg-blue-500 rounded-full flex items-center justify-center mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                </div>

                <h1 class="text-4xl font-bold text-gray-800 mb-2">Welcome to <span class="text-blue-600">Symfony TDD</span>!</h1>

                <p class="text-xl text-gray-600 mb-6">Test driven development with Symfony</p>

                <div class="prose prose-blue max-w-none mb-8">
                    <p class="text-gray-700">
                        This is your starting point for building your Symfony application using Test-Driven Development.
                    </p>
                </div>

                <a href="#" class="inline-block px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition duration-200">
                    Start
                </a>

                <p class="mt-6 text-sm text-gray-500">
                    Ready to write your first test?
                </p>
            </div>
        </div>
    </body>
{% endblock %}
